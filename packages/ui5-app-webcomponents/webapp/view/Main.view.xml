<mvc:View controllerName="test.Sample.controller.Main" 
	displayBlock="true" 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:card="sap.f.cards" 
	xmlns:f="sap.f" 
	xmlns:form="sap.ui.layout.form" 
	xmlns:l="sap.ui.layout" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:webc="ui5webc">
	<Page title="{i18n>appTitle}">
		<headerContent>
			<core:Icon color="#1873B4" 
				src="sap-icon://sap-ui5" 
				size="2rem" />
			<Text text="{LatestUI5>/latest}" />
		</headerContent>
		<content>
			<l:BlockLayout background="Light">
				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<webc:Title level="H1" 
							text="UI5 Webcomponents" 
							align="center" />
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell width="2">
						<HBox width="100%" 
							justifyContent="Center" 
							alignItems="Center">

							<DatePicker value="{
								path:'Main>/date', 
								type:'sap.ui.model.type.Date', 
								formatOptions: { style: 'long', strictParsing: true}
							}" />

							<Text text="you picked: {
									path: 'Main>/date', 
									type:'sap.ui.model.type.Date', 
									formatOptions: { style: 'full'}
								}" 
								class="sapUiSmallMarginBegin" />

						</HBox>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell width="2">
						<HBox width="100%" 
							justifyContent="Center" 
							alignItems="Center">

							<Label text="Pick that TriptIt airport:" 
								design="Bold" 
								class="sapUiSmallMarginEnd" />
							<MultiComboBox items="{
												path: 'Backend>/Airports',
												sorter: { path: 'Name' }
											}">
								<core:Item key="{Backend>IataCode}" 
									text="{Backend>Name}" />
							</MultiComboBox>

						</HBox>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>

					<l:BlockLayoutCell>
						<VBox>

							<f:Card class="sapUiMediumMargin" 
								width="300px">
								<f:header>
									<card:Header title="TripIt OData v4" 
										subtitle="People directory" 
										iconSrc="sap-icon://group" />
								</f:header>
								<f:content>
									<webc:List items="{Backend>/People}" 
										mode="SingleSelect">
										<webc:StandardListItem title="{Backend>FirstName} {Backend>LastName}" 
											description="{Backend>UserName}" 
											press="onPeopleSelect" />
									</webc:List>

								</f:content>
							</f:Card>
						</VBox>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell>
						<Text text="people details" 
							class="sapUiSmallMarginBottom" />
						<TabContainer class="sapUiResponsiveContentPadding sapUiResponsivePadding--header" 
							busy="{Main>/TabContainerBusy}" 
							busyIndicatorDelay="0">
							<items>
								<TabContainerItem name="master data" 
									icon="sap-icon://person-placeholder">
									<content>
										<Label text="Name" 
											labelFor="idName" />
										<Input enabled="false" 
											id="idName" 
											value="{PeopleDetail>/FirstName} {PeopleDetail>/MiddleName} {PeopleDetail>/LastName}" />
										<Label text="Username" 
											labelFor="idUserName" />
										<Input enabled="false" 
											id="idUserName" 
											value="{PeopleDetail>/UserName}" />
										<Label text="Gender" 
											labelFor="idGender" />
										<Input enabled="false" 
											id="idGender" 
											value="{PeopleDetail>/Gender}" />
										<Label text="Age" 
											labelFor="idAge" />
										<Input enabled="false" 
											id="idAge" 
											value="{= ${PeopleDetail>/Age} ? ${PeopleDetail>/Age} : '?'}" />
									</content>
								</TabContainerItem>
								<TabContainerItem name="address" 
									icon="sap-icon://addresses">
									<content>
										<Label text="Street" 
											labelFor="idStreet" />
										<Input enabled="false" 
											id="idStreet" 
											value="{= ${PeopleDetail>/AddressInfo/0/Address} ? ${PeopleDetail>/AddressInfo/0/Address} : '?' }" />
										<Label text="City" 
											labelFor="idCity" />
										<Input enabled="false" 
											id="idCity" 
											value="{= ${PeopleDetail>/AddressInfo/0/City/Name} ? ${PeopleDetail>/AddressInfo/0/City/Name} : '?' }" />

									</content>
								</TabContainerItem>

							</items>
						</TabContainer>

					</l:BlockLayoutCell>
				</l:BlockLayoutRow>

			</l:BlockLayout>
		</content>
	</Page>

</mvc:View>